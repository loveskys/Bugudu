.container {
  position: relative;
  width: 100%;
  height: 100%;
  transform-style: preserve-3d;
  backface-visibility: hidden;
  transition: transform .5s ease;
}
.login {
  width: 100vw;
  height: 82vh;
  backface-visibility: hidden;
  transform-style: preserve-3d;
  box-sizing: border-box;
  position: relative;
}


.logininfo {
  display: flex;
  justify-content: center;
  box-sizing: border-box;
}
.logo {
  width: 283.5px;
  height: 113.6px;
  margin-top: 100px;
}

.login-btn {
  position: absolute;
  bottom: 0;
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 10px 0;
}


.privacy {
  color: rgb(155, 155, 155);
  font-size: 14px;
}
.privacy-checkbox .wx-checkbox-input {
  border-radius: 50%;
  width: 14px;
  height: 14px;
}
.privacy-checkbox {
  font-size: 12px;
}
.privacy-text {
  color: rgb(228, 216, 50);
  font-size: 12px;
}
.tologin {
  width: 80%;
  cursor: pointer;
  margin: 22px 0;
  padding: 0 20px;
  text-align: center;
  font-size: 20px;
  height: 42px;
  line-height: 40px;
  border-radius: 15px;
  background: #FFC300;
}
.phonelogin {
  color: rgb(180, 180, 180);
  font-size: 18px;
}