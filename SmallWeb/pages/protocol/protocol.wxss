.container {  
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f9f9f9;
  font-family: "Helvetica Neue", "Roboto", "Arial", sans-serif;  
}
.custom-navbar {
  display: flex;
  height: 90px;
  align-items: center;
  background-color: #FFFFFF;
  /* box-shadow: 0 5px 10px rgba(0, 0, 0, 0.3); */
}
.returnbtn {
  margin-top: 32px;
  margin-left: 10px;
  /* line-height: 22px; */
  /* border: 1px solid rgb(204, 204, 204); */
  border-radius: 15px;
  padding: 0 10px;
}
.title {
  margin-top: 30px;
  margin-left: 16%;
  font-size: 32rpx; 
  font-weight: bold;
  color: black;
}
.content-text {
  text-indent: 2em;
  flex: 1;
  padding: 10px 20px 50px 20px;
  color: black;
  line-height: 1.5;
  overflow-y: scroll;
  box-sizing: border-box;
  white-space: normal;
}


.content {
  flex: 1;
  padding: 10px 20px 50px 20px;
  font-size: 24rpx;
  color: black;
  line-height: 1.5;
  overflow-y: scroll;
  box-sizing: border-box;
  white-space: normal;
}
.highlight{
  font-weight: bold;
  font-size: 28rpx;
  white-space: normal;
}
.update-date {  
  font-size: 24rpx;
  color: #a6a6a6;
}