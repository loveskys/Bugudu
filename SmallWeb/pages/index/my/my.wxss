/* Main Container */
.container {
  width: 100vw;
  height: 120vh;
  background: #ffffff;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  padding-top: 20px;
}

/* Title Section */
.title {
  position: relative;
  padding: 60px 20px 20px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.setting {
  position: absolute;
  font-size: 25px;
  top: 45px;
  left: 13px;
  color: #000;
}

/* User Info */
.myInfo {
  width: 100%;
  height: 110px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding-top: 10px;
}
.headView{
  position: relative;
  margin-left: 30rpx;
}
.headportrait {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.user-verification{
  position: absolute;
  /* background-color: #FFC300; */
  border-radius: 50%;
  right: 0%;
  bottom: 0%;
  width: 60rpx;            /* 图标的宽度 */
  height: 60rpx;           /* 图标的高度 */
  /* transform: translate(25%, 25%); 将图标移动到头像的右下角 */
}
.user-verification-developer{
  position: absolute;
  /* background-color: #FFC300; */
  border-radius: 25%;
  left: 50%;
  bottom: 0%;
  height: 50rpx;           /* 图标的高度 */
  width: 132rpx;
  transform: translate(-50%, 0%); 
}

.t_userinfo {
  box-sizing: border-box;
  position: absolute;
  left: 35%;
  height: 25%;
}

.t_username {
  padding: 8px 0 3px 2px;
  font-size: 18px;
  font-weight: bold;
  line-height: 1.6;
}

.t_userauthen {
  margin-top: 12px;
  display: flex;
  font-size: 13px;
  color: #FFC300;
}

.authen_item {
  border-radius: 15px;
  margin-right: 5px;
  padding: 0 10px;
  font-weight: bold;
  font-size: 13px;
  height: 25px;
  line-height: 25px;
  background: #FFC300;
  box-sizing: border-box;
  color: #ffffff;
}

.edit {
  width: 8%;
  height: 50%;
  box-sizing: border-box;
  /* padding-bottom: 6rpx; */
  padding-top: 128rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.miconbianji {
  font-size: 28px;
  color: #979797;
}

/* Icon Colors */
.miconweizhixingbie {
  font-size: 38rpx;
  color: #dddddd;
}

/* Interest and Hobbies */
.interest {
  display: flex;
  align-items: center;
  height: auto;
  /* padding: 20rpx 20rpx; */
  box-sizing: border-box;
  /* background-color: #f9f9f9; */
  /* border-radius: 20rpx;
  margin-bottom: 20rpx; */
}

.hobby {
  width: 95%;
  display: flex;
  align-items: center;
  overflow-x: auto;
}

.hobby-label {
  color: #FF9500;
  font-size: 13px;
  font-weight: bold;
  margin-right: 20rpx;
}

.hobby-cont {
  display: flex;
  border-radius: 15px;
  align-items: center;
  padding-left: 10rpx;
  /* border: 1px solid #ffd700; */
  transition: background-color 0.3s ease;
}

.hobby-cont-item {
  margin-right: 20rpx;
  padding: 18rpx 24rpx;
  background: rgba(255, 246, 219, 1);
  color: black;
  /* font-weight: bold; */
  flex-shrink: 0;
  font-size: 24rpx;
  border-radius: 30%;
}

/* Traits */
.trait {
  border-left: 1px solid #808080;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}

.trait-item {
  /* border: 1px solid #ffd700;   */
  background: rgba(255, 246, 219, 1);
  color: black;
  /* font-weight: bold; */
  padding: 7px;
  border-radius: 10px;
  font-size: 13px;
  display: flex;
  align-items: center;
  white-space: nowrap;
  border-radius: 15px;
  height: auto;
}

.trait-item:first-child {
  margin-left: 0;
}

/* Curriculum Section */
.curriculum {
  border-radius: 10px;
  /* margin-bottom: 10px; */
  box-sizing: border-box;
}

.c_title {
  font-weight: bold;
  margin-left: 10px;
  margin-right: 20px;
  margin-top: 5px;
  box-sizing: border-box;
  color: #FFC300;
}

.c_textarea {
  /* width: 94%; */
  height: 150rpx;
  margin: 13rpx 13rpx 0 13rpx;
  border-radius: 20%;
  font-size: 28rpx;
  padding: 12rpx;
  color: rgba(135, 135, 135, 1);
  /* background: #f9f9f9; */
  /* border: 1px solid #000; */
  letter-spacing: 3rpx;
  line-height: 1.3;
  box-sizing: border-box;
}

/* Activity Plate */
.activity-plate {
  text-align: center;
  padding: 0 20px;
  box-sizing: border-box;
}

.plate {
  display: flex;
  width: 60%;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0px 20px;
  border-radius: 20%;
  transition: background-color 0.3s ease;
  margin-bottom: 15px;
}

.plate-item {
  font-size: 20px;
  padding: 0 0px;
  color: #F8D773;
  box-sizing: border-box;
  transition: color 0.3s ease;
  font-weight: 550;
}

.plate-selected {
  color: #ffc400;
  font-weight: 550;
}

.plate-item:hover {
  background-color: rgba(255, 255, 255, 0.2);
  /* 悬停效果 */
  transform: scale(1.05);
  /* 悬停时微缩放 */
}



.page_grid_view {
  box-sizing: border-box;
  padding: 5px 30px 60px 30px;
}

.page_item {
  box-sizing: border-box;
  width: 100%;
  border-radius: 15px;
  /* box-shadow: 0 14px 18px rgba(0, 0, 0, 0.2); 阴影效果*/
  background-color: #F2F2F2;
  /* border: 1px solid rgba(0, 0, 0, 0.1); */
}

.page_image {
  width: 100%;
  max-height: 500rpx;
  border-radius: 15px;
  vertical-align: bottom;
  position: relative;
}

.page-category {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  font-weight: 600;
  border-radius: 20rpx;
  padding: 6rpx 20rpx;
  font-size: 22rpx;
  line-height: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.page_cont {
  width: 100%;
  height: 30%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.page_head {
  width: 25%;
  height: 30px;
  box-sizing: border-box;
  text-align: center;
  margin-top: 10rpx
}

.page_headimg {
  width: 28px;
  height: 28px;
  border-radius: 50%;
  vertical-align: bottom;
}

.page_text {
  width: 70%;
  height: 100%;
  padding: 16rpx 0 8rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: start;
  margin-top: -10rpx;
}

.page_text_title {
  font-weight: 550;
  font-size: 24rpx;
  box-sizing: border-box;
  width: 95%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #646464;
  margin-left: 5rpx;
  margin-top: 4rpx;
}

.page_text_num {
  font-size: 22rpx;
  color: #979797;
  margin-left: 5rpx;
}

.no-activities {
  box-sizing: border-box;
  margin: 80px 30px 60px 30px;
  border-radius: 15px;
}

.no-activities-image {
  width: 100%;
  max-height: 160rpx;
  border-radius: 15px;
  position: relative;
}

.no-activities-text {
  font-weight: 500;
  font-size: 30rpx;
  text-align: center;
  box-sizing: border-box;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: rgb(156, 156, 156);
  margin-left: 5rpx;
  margin-top: 12rpx;
}