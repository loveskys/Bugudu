.custom-tabbar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(240, 240, 240, 1);
  border-top: 1px solid #eee;
  padding: 35rpx 60rpx;
  /* box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1); */
  border-top-left-radius: 25px;
  border-top-right-radius: 25px;
  height: 100rpx;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 85rpx;
  width: 80px;
  padding-left: 0%;
  padding-right: 0%;
}

.tab-item.active {
  color: #007aff;
}

.tab-icon {
  width: 80rpx;
  height: 80rpx;
  margin-top: -25rpx;
}

